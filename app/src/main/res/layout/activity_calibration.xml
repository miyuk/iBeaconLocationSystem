<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.ac.oit.elc.mail.ibeaconlocationsystem.activity.CalibrationActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/buttonStart"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textStatus"
        android:layout_toEndOf="@+id/editDistance" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:id="@+id/editDistance"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/buttonStart"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/textView5"
        android:text="1.0"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance:"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/editDistance"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/buttonStart"
        android:layout_alignParentEnd="false"
        android:gravity="center_vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:layout_below="@+id/buttonStart"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonStart"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStatus"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/buttonSave"
        android:layout_alignParentStart="true"
        android:text="Status" />
</RelativeLayout>
